{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "Average Obesity Rate Over Time by Region",
  "data": {
    "url": "data/obesitydataWHO.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "RegionSelect",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "labels": [
          "All Regions",
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "Select Region: "
      },
      "value": null
    }
  ],
  "transform": [
    {"filter": "datum.FactValueNumeric != null && datum.Period >= 1980"},
    {"filter": "RegionSelect == null || datum.ParentLocation == RegionSelect"}
  ],
  "mark": {"type": "area", "line": true, "opacity": 0.8},
  "encoding": {
    "x": {
      "field": "Period",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": 45,
        "tickCount": 0
      }
    },
    "y": {
      "aggregate": "mean",
      "field": "FactValueNumeric",
      "type": "quantitative",
      "title": "Total Average Obesity Rate (%)",
      "stack": "zero"
    },
   "color": {
    "field": "ParentLocation",
    "type": "nominal",
    "title": "Region",
    "legend": {
      "orient": "bottom",
      "direction": "horizontal",
      "title": "Region",
      "labelFontSize": 10,
      "symbolSize": 80,
      "offset": 5
    }
  },
    "tooltip": [
      {"field": "ParentLocation", "title": "Region"},
      {"field": "Period", "title": "Year"},
      {
        "field": "FactValueNumeric",
        "aggregate": "mean",
        "format": ".1f",
        "title": "Average Obesity (%)"
      }
    ]
  },
  "config": {
    "legend": {"titleFontSize": 12, "labelFontSize": 11},
    "title": {"fontSize": 18, "fontWeight": "bold", "color": "#c62828"}
  }
}
